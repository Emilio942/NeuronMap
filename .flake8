[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    W503,
    E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .coverage,
    .pytest_cache,
    node_modules
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
max-complexity = 12
